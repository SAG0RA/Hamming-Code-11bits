#:kivy 2.0.0

<HammingEncoder>:
    cols: 4
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.5, 1
        height: self.minimum_height
        size: (root.width, max(root.height, dp(300)))

        Label:
            text: 'Hamming Encoder'
            size_hint: 1, 0.2

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.2

            Label:
                text: 'Escoga la paridad:'
                size_hint: 0.3, 1

            Spinner:
                id: parity_spinner
                values: ['par', 'impar']
                size_hint: 0.7, 1

        Label:
            text: 'Ingrese n√∫mero binario de 11 bits:'
            size_hint: 1, 0.2

        TextInput:
            id: binary_input
            input_filter: lambda text, from_undo: text if text.isnumeric() and len(text) <= 11 else ""
            size_hint: 1, 0.4

        Button:
            text: 'Calcular'
            size_hint: 1, 0.2
            on_press: root.calculate()

        Label:
            id: result_label
            size_hint: 1, 0.2
